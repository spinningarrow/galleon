@import 'type'

button
	background #f9f9f9
	border 1px solid #ccc
	border-radius 2px
	box-shadow 1px 1px 0 rgba(0, 0, 0, 0.05)
	color #999
	cursor pointer
	font-family base-font-family
	font-weight 600
	line-height 1.6
	text-transform uppercase
	//font-size 0.8em
	//margin-top 1.5em
	//.transition(@defaultTransition)

	&:hover
		border-color goldenrod

	//&focus
	//	border-color @steelOrange
	//	outline none

input
	border-color #eee
	border-style solid
	border-width 0 0 1px 0
	color #000
	font-family base-font-family
	font-size 1em

button, input
	&:focus
		border-color gold
		outline none

.button-danger
	color #f00